#include <stdio.h>
int main() {
    int num, digit;
    int count = 0;
    int sum = 0;
    int product = 1;
    int temp;
    printf("Enter a number: ");
    scanf("%d", &num);
    if (num < 0)
        num = -num;

    temp = num; // Store original number for reference

    if (num == 0) { // Special case for 0
        count = 1;
        sum = 0;
        product = 0;
    } else {
        while (num > 0) {
            digit = num % 10;
            count++;
            sum += digit;
            product *= digit;
            num /= 10;
        }
    }
    printf("\nFor the number %d:\n", temp);
    printf("Count of digits = %d\n", count);
    printf("Sum of digits   = %d\n", sum);
    printf("Product of digits = %d\n", product);

    return 0;
}